{
  "template": "post-*",
  "index_patterns": ["*"],
  "order": "1",
  "settings": {
    "refresh_interval": "5s"
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "contents": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "writer": {
        "type": "text",
        "fields": {
          "keyword": { "type": "keyword" }
        }
      },
      "tag": { "type": "text" },
      "name": { "type": "text" },
      "hit": { "type": "long" },
      "like_count": { "type": "short" },
      "post_id": { "type": "keyword" }
    }
  }
}
